<div class="container p-2 mb-2">
  <h2><%= @cocktail.name %></h2>
    <ul>
      <% @doses.each do |dose| %>
      <li><%= "#{dose.ingredient.name} : #{dose.description}" %></li>
      <li><%= link_to dose_path(dose),
              method: :delete,
              data: { confirm: "Delete this item?" }  do %>
              <i class="trash-icon far fa-trash-alt d-inline ml-2"></i></li>
      <% end %>
    </ul>
  <br>
  <%= link_to 'Go back to cocktails', cocktails_path  %>
  <%= link_to 'Create a dose', new_cocktail_dose_path(@cocktail) %>
</div>
